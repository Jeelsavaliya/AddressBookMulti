@{
    ViewData["Title"] = "Country Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model AddressBookMulti.Areas.LOC_Country.Models.LOC_CountryModel

<div class="row">
    <div class="col-md-12">
        <h3>Country Add List</h3>
        <h3>@TempData["CountryInsertMsg"]</h3>
        <form method="post" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="Save">
            @Html.HiddenFor(x=>x.CountryID)
            <div class="form-group">
                <label>Country Name</label>                
                <input type="text" class="form-control" required asp-for="CountryName" placeholder="Enter Country Name" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Country Code</label>
                <input type="text" class="form-control"  asp-for="CountryCode" placeholder="Enter Country Code" />
                <span asp-validation-for="CountryCode" class="text-danger"></span>
            </div>
            
            <hr />
            <div class="row">
                <input type="submit" class="btn btn-success" />
                <a class="btn btn-danger" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="GoHome">Cancel</a>
            </div>
        </form>
    </div>
</div>



